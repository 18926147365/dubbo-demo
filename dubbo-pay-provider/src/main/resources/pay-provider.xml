<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://code.alibabatech.com/schema/dubbo
            http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="${dubbo.application.name}" />

    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <dubbo:registry protocol="zookeeper"   address="${dubbo.zookeeper.address}" timeout="${dubbo.zookeeper.timeout}" />

    <!-- 用dubbo协议在端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="${dubbo.server.port}"  />

    <!--定义服务提供者-->
    <dubbo:provider  group ="${dubbo.group.name}" filter="gtrace"  version="${dubbo.group.version}"  />

    <!--定义服务消费者-->
    <dubbo:consumer  group ="${dubbo.group.name}"  version="${dubbo.group.version}" />

    <dubbo:service interface="com.omen.service.PayService" stub="true"  class="com.omen.service.impl.PayServiceImpl"   group="dev" version="1.0.0">
        <dubbo:method name="pay" async="true" timeout="6000" ></dubbo:method>
        <dubbo:method name="pay2" executes="5" ></dubbo:method>
    </dubbo:service>



</beans>
